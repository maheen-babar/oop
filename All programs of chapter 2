//Program 2.29//
#include<iostream>
using namespace std;
int main(){
	int num=1;
	cout<<"Side of square\tPerimeter of square\tArea of square\n";
	cout<<num<<"\t"<<4*num<<"\t"<<num*num<<"\n";
	num=num+1;
	cout<<num<<"\t"<<4*num<<"\t"<<num*num<<"\n";
	num=num+1;
		cout<<num<<"\t"<<4*num<<"\t"<<num*num<<"\n";
		num=num+1;
			cout<<num<<"\t"<<4*num<<"\t"<<num*num<<"\n";
	
	
	cout<<num+1<<"\t"<<4*num<<"\t"<<num*num;
	return 0;
}


//program 2.30//

#include<iostream>
using namespace std;
int main(){
	int weight;
	int height;
	cout<<"Enter weight in pounds:\n";
	cin>>weight;
	cout<<"Enter height in inches:\n";
	cin>>height;
	int BMI=weight*703/height*height;
	cout<<"Body mass index is:"<<BMI<<endl;
	cout<<"BMI VALUES\n";
	cout<<"Underweight: less than 18.5\n";
	cout<<"Normal: between 18.5 and 24.9\n";
	cout<<"Overweight: between 25 and 29.9\n";
	cout<<"Obese: 30 or greater";
	return 0;
}



//Program 2.31//

#include<iostream>
using namespace std;
int main(){
	double total_miles, cost_gallon, avg_miles, parking_fee, toll;
	cout<<"Enter total miles:\n";
	cin>>total_miles;
	cout<<"Enter cost per gallon:\n";
	cin>>cost_gallon;
	cout<<"Enter average miles:\n";
	cin>>avg_miles;
	cout<<"Enter parking fee:\n";
	cin>>parking_fee;
	cout<<"Enter tolls per day:\n";
	cin>>toll;
double	daily_driving_cost=((total_miles/avg_miles)*cost_gallon)+parking_fee+toll;
	cout<<"Total driving cost of per day:"<<daily_driving_cost;
	return 0;
}


//Program 2.32//

#include<iostream>
using namespace std;
int main(){
	double age;
	cout<<"Enter age:\n";
	cin>>age;
	
	double first_MHR=220-age;
	double second_MHR=208-0.*age;
	double third_MHR=207-0.7*age;
	double fourth_MHR=211-0.64*age;
	
	cout<<"First result:"<<first_MHR<<endl;
	cout<<"Second result:"<<second_MHR<<endl;
	cout<<"Third result:"<<third_MHR<<endl;
	cout<<"Fourth result:"<<fourth_MHR<<endl;

double min;
min=first_MHR;
if(second_MHR<min)
min=second_MHR;

if(third_MHR<min)
min=third_MHR;

if(fourth_MHR<min)
min=fourth_MHR;


double max;
max=first_MHR;
if(second_MHR>max)
max=second_MHR;

if(third_MHR>max)
max=third_MHR;

if(fourth_MHR>max)
max=fourth_MHR;

cout<<"Smallest MHR calculated is:"<<min<<endl;
cout<<"Largest MHR calculated is:"<<max<<endl;
	return 0;
}
