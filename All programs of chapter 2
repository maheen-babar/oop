//Program 2.23//
#include<iostream>
using namespace std;
int main(){
	int a,b,c,d,e;
	cout<<"Enter five integers:";
	cin>>a>>b>>c>>d>>e;
	int max=a;
	if(b>max);
	max=b;
	if(c>max);
	max=c;
	if(d>max);
	max=d;
	if(e>max);
	max=e;
	cout<<"Largest Number is:"<<max<<endl;
	int min=a;
	if(b<min);
	min=b;
	if(c<min);
	min=c;
	if(d<min);
	min=d;
	if(e<min);
	min=e;
	cout<<"Smallest number is:"<<min;
	return 0;
}

//Program 2.24//
#include<iostream>
using namespace std;
int main(){
	int a,b;
	cout<<"Enter two integers:";
	cin>>a>>b;
	if(a%2!=0){
		cout<<a<<"  is an odd number\n";
	}
	if(a%2==0){
		cout<<a<<"  is an even number\n";
	}
	if(b%2!=0){
		cout<<b<<"  is an odd number\n";
	}
		if(b%2==0){
		cout<<b<<"  is an even number\n";
	}
	int sum=0;
	sum=a+b;
	if(sum%2==0){
		cout<<"sum of "<<a<<" and "<<b<<"is"<<sum<<"  and it is an even number"<<endl;
	}
		if(sum%2!=0){
		cout<<"sum of "<<a<<" and "<<b<<"is"<<sum<<"  and it is an odd number"<<endl;
	}
	return 0;
}



//Program 2.25//
#include<iostream>
using namespace std;
int main(){
	int a,b,c;
	cout<<"Enter integers:";
	cin>>a;
	cout<<"Enter value:";
	cin>>b;
	cout<<"Enter value:";
	cin>>c;
	
	if (a%c==0){
		cout<<a<<" is a multiple of "<<c;
	}
	if (b%c==0){
		cout<<b<<" is a multiple of "<<c;
	}
	return 0;
}

