//program 2.18//

#include<iostream>
using namespace std;
int main(){
	int a,b;
	cout<<"Enter two integers:";
	cin>>a>>b;
	if(a!=b){
		cout<<"Numbers are not equal.";
	}
	if(a<b){
		cout<<a<<"is smaller.\n";
	}
	if(b<a){
		cout<<b<<"is smaller.";
	}
	return 0;
}

//Program 2.19//

#include<iostream>
using namespace std;
int main(){
	int a,b,c;
	cout<<"Enter three integers:";
	cin>>a>>b>>c;
	int sum=0;
	sum=a+b+c;
	cout<<"Sum is"<<sum<<endl;
	int avg=0;
	avg=sum/3;
	cout<<"Average is"<<avg<<endl;
	int pro=0;
	pro=a*b*c;
	cout<<"Product is"<<pro<<endl;
int max=a;
if(b>max){
	max=b;
}
if(c>max)
max=c;

int min=a;
if(b<min)
min=b;
if(c<min)
min=c;
cout<<"Largest number is:"<<max<<endl;
cout<<"Smallest number is:"<<min<<endl;
	return 0;
}


