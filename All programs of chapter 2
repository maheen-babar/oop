
//PROGRAM 2.16//
#include<iostream>
using namespace std;
int main(){
	int a,b;
	cout<<"Enter number one:";
	cin>>a;
	cout<<"Enter number two:";
	cin>>b;
	int sum=0;
	int pro=0;
	sum=a+b;
	cout<<"Sum is:"<<sum<<endl;
	pro=a*b;
	cout<<"Product is:"<<pro<<endl;
	int diff=0;
	diff=a-b;
	cout<<"Difference is:"<<diff<<endl;
	int quotient=0;
	quotient=a/b;
	cout<<"quotient is:"<<quotient;
	return 0;
}


